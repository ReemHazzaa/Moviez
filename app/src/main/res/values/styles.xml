<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialogLoadingStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="TopCurvedRect">
        <item name="cornerSizeTopRight">4%</item>
        <item name="cornerSizeTopLeft">4%</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#CCE1F5</item>
        <item name="colorControlActivated">#FFBC53</item>
    </style>

    <style name="CurvedRect">
        <item name="cornerSize">4%</item>
    </style>

    <style name="LeftCurvedRect">
        <item name="cornerSizeBottomLeft">4%</item>
        <item name="cornerSizeTopLeft">4%</item>
    </style>
</resources>